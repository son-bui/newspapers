<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>

  {{!-- Font Awesome --}}
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  {{!-- Fonts --}}
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
  {{!-- Bootstrap CSS --}}
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

  {{!-- Image --}}
  <link rel="stylesheet" href="/public/assets/img/lunar.png" type="image/png" sizes="16x16">

  <link rel="stylesheet" href="/public/assets/css/admin.css">
  <link rel="stylesheet" href="/public/assets/css/table.css">
  <link rel="stylesheet" href="/public/css/style_1.css">
  <link rel="stylesheet" href="/public/assets/css/lunar.css">
  <link rel="stylesheet" href="/public/assets/css/demo.css">


</head>

<body>
  <div class="container-fluid d-flex justify-content-center mt-3 mb-3">
    <div class="main">
      <div class="row h-100">
        {{!-- Sidebar --}}
        <section class="col-sm-12 col-lg-2 pl-0 pr-0">
          {{!-- Sidebar PC --}}
          <section class="sidebar-pc">
            {{!-- Logo --}}
            <div class="logo">
              <a href="/" class="d-block">
                <img src="/public/images/logo.png" alt="Image Logo">
              </a>
            </div>

            {{!-- Navbar --}}
            <nav class="w-100">
              <ul class="list">
                <li class="list-item">
                  <a href="/admin" class="list-link">
                    <i class="fa fa-tachometer" aria-hidden="true"></i>
                    Bảng điều khiển
                  </a>
                </li>
                <li class="list-item">
                  <a href="/admin/category" class="list-link">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    Danh mục
                  </a>
                </li>
                <li class="list-item">
                  <a href="/admin/tags" class="list-link">
                    <i class="fa fa-tags" aria-hidden="true"></i>
                    Thẻ
                  </a>
                </li>
                <li class="list-item">
                  <a href="/admin/news" class="list-link">
                    <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                    Bài viết
                  </a>
                </li>
                <li class="list-item">
                  <a href="/admin/users" class="list-link active">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    Người dùng
                  </a>
                </li>
                <li class="list-item">
                  <a href="/admin/assign-category" class="list-link">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    Phân công chuyên mục
                  </a>
                </li>
                <li class="list-item">
                  {{!-- Sign out --}}
                  <form action="/Account/Logout" id="frmLogout" method="POST"></form>
                  <a class="nav-link" href="javascript: $('#frmLogout').submit()">
                    <i class="fa fa-sign-in" aria-hidden="true"></i>
                    Đăng xuất
                  </a>
                </li>
              </ul>
            </nav>

            {{!-- Ads --}}
            <div class="position-relative d-flex justify-content-center">
              <div class="ads">
                <img src="/public/images/flamenco-lets-get-out-of-here.png" alt="Image Ads">
                <p>Upgrade to <span style="font-weight: bold;">Pro</span> now</p>
                <a href="#" class="btn btn-success mt-2 mb-2">Upgrade</a>
              </div>
            </div>
          </section>


          {{!-- Sidebar Mobile --}}
          <div class="sidebar-mobile">
            {{!-- Logo --}}
            <div class="logo">
              <a href="/" class="d-block">
                <img src="/public/images/logo.png" alt="Image Logo">
              </a>
            </div>

            {{!-- Navbar --}}
            <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
              <div class="container">
                <a class="navbar-brand" href="/">
                  <h3>Trang chủ</h3>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse"
                  data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                  aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse position-relative" id="navbarSupportedContent">
                  <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                      <a href="/admin" class="nav-link">
                        <i class="fa fa-tachometer" aria-hidden="true"></i>
                        Bảng điều khiển
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/admin/category" class="nav-link">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Danh mục
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/admin/tags" class="nav-link">
                        <i class="fa fa-tags" aria-hidden="true"></i>
                        Thẻ
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/admin/news" class="nav-link">
                        <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                        Bài viết
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/admin/users" class="nav-link active">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        Người dùng
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/admin/assign-category" class="nav-link">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        Phân công chuyên mục
                      </a>
                    </li>
                    <li class="nav-item">
                      {{!-- Sign out --}}
                      <form action="/Account/Logout" id="frmLogout" method="POST"></form>
                      <a class="nav-link" href="javascript: $('#frmLogout').submit()">
                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                        Đăng xuất
                      </a>
                    </li>
                  </ul>
                </div>
              </div>
            </nav>
          </div>
        </section>

        {{!-- Main content --}}
        <section class="col-sm-12 col-lg-10 main-content">
          <div class="container">
            {{!-- Top bar --}}
            <section class="top-bar-admin mb-4">
              <h4>Người dùng</h4>
              <form class="search-form my-2 my-lg-0" method="GET" action="/Category/search">
                <input class="form-control mr-sm-2" type="text" name="Search" placeholder="Search">
                <button class="btn-search" type="submit">
                  <i class="fa fa-search" aria-hidden="true"></i>
                </button>
              </form>
            </section>

            <a href="/admin/users/add" type="button" class="btn btn-outline-success mb-3">
              <i class="fa fa-plus" aria-hidden="true"></i>
              Thêm mới
            </a>

            {{!-- Card --}}
            <section class="card">
              <div class="card-header">
                <h5>Bảng thẻ</h5>
              </div>
              <div class="card-body">
                <div class="table-responsive-vertical shadow-z-1">
                  <!-- Table starts here -->
                  <table id="table" class="table table-hover table-mc-light-blue">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Ngày sinh</th>
                        <th>Phân quyền</th>
                        <th>Bút danh</th>
                        <th>&nbsp;</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each this.listUser}}
                      <tr>
                        <th>{{IDUser}}</th>
                        <td>{{Name}}</td>
                        <td>{{Email}}</td>
                        <td>{{DOB}}</td>
                        <td>{{Permission}}</td>
                        <td>{{Alias}}</td>
                        <td class="text-right action action-overview">
                          <form action="/admin/user/delete/{{IDUser}}" id="frmDelUser" method="POST"></form>
                          <a href="/admin/users/detail/{{IDUser}}" class="btn btn-success">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                          </a>
                          <a href="/admin/users/edit/{{IDUser}}" class="btn btn-primary">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                          </a>
                          <button onclick="saveUserId({{IDUser}})" type="button" class="btn btn-danger"
                            data-toggle="modal" data-target="#warningModal">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                          </button>
                        </td>
                      </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="card-footer">
                <nav aria-label="Page navigation example">
                  <ul class="pagination justify-content-end mb-0">
                    {{#if prev}}
                    <li class="page-item">
                      <a class="page-link" href="/admin/users?page={{prev_value}}">Previous</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                      <a class="page-link" href="/admin/users?page={{prev_value}}">Previous</a>
                    </li>
                    {{/if}}
                    <li class="page-item m-2">
                      <span>{{this.page}} / {{this.nPages}}</span>
                    </li>
                    {{#if next}}
                    <li class="page-item">
                      <a class="page-link" href="/admin/users?page={{next_value}}">Next</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                      <a class="page-link" href="/admin/users?page={{next_value}}">Next</a>
                    </li>
                    {{/if}}
                  </ul>
                </nav>
              </div>
            </section>
          </div>
        </section>
      </div>
    </div>


    <!-- Modal -->
    <div class="modal fade " id="warningModal" tabindex="-1" role="dialog" aria-labelledby="warningModal"
      aria-hidden="true">
      <div class="modal-dialog  modal-dialog-centered" role="document">
        <div class="modal-content">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <div class="modal-body">
            <div class="px-3 pt-3 text-center">
              <div class="event-type warning">
                <div class="event-indicator ">
                  <svg style="width:60px;height:60px" viewBox="0 0 24 24">
                    <path fill="#000000" d="M11,4.5H13V15.5H11V4.5M13,17.5V19.5H11V17.5H13Z" />
                  </svg>
                </div>
              </div>
              <h3 class="pt-3">Bạn chắc chứ?</h3>
              <p class="text-muted">
                Bạn sẽ phải chịu trách nhiệm cho hành động này!
              </p>

            </div>
          </div>
          <div class="modal-footer">
            <a href="javascript: $(`#frmDelUser-${localStorage.getItem('userIdToDel')}`).submit()"
              class="btn btn-cstm-danger">Tiếp tục</a>
            <a href="/" class="btn btn-cstm-secondary" data-dismiss="modal" aria-label="Close">Hủy</a>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal Ends -->
  </div>


  {{!-- Bootstrap JS --}}
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

  <script src="/public/assets/js/table.js"></script>

  <script>
    function saveUserId(id) {
      return localStorage.setItem('userIdToDel', id);
    }
  </script>
</body>

</html>