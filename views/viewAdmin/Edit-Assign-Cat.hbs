<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>

  {{!-- Font Awesome --}}
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  {{!-- Fonts --}}
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
  {{!-- Bootstrap CSS --}}
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  {{!-- Animate --}}
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.0/animate.min.css">
  {{!-- Image --}}
  <link rel="stylesheet" href="/public/assets/img/lunar.png" type="image/png" sizes="16x16">

  <link rel="stylesheet" href="/public/assets/css/admin.css">
  <link rel="stylesheet" href="/public/assets/css/table.css">
  <link rel="stylesheet" href="/public/css/style_1.css">
  <link rel="stylesheet" href="/public/assets/css/lunar.css">
  <link rel="stylesheet" href="/public/assets/css/demo.css">
</head>

<body>
  <div class="container-fluid d-flex justify-content-center mt-3 mb-3">
    <div class="main">
      <div class="row h-100">
        {{!-- Sidebar --}}
        <section class="col-sm-12 col-lg-2 pl-0 pr-0">
          {{!-- Sidebar PC --}}
          <section class="sidebar-pc">
            {{!-- Logo --}}
            <div class="logo">
              <a href="/" class="d-block">
                <img src="/public/images/logo.png" alt="Image Logo">
              </a>
            </div>

            {{!-- Navbar --}}
            <nav class="w-100">
              <ul class="list">
                <li class="list-item">
                  <a href="/admin" class="list-link">
                    <i class="fa fa-tachometer" aria-hidden="true"></i>
                    Bảng điều khiển
                  </a>
                </li>
                <li class="list-item">
                  <a href="/admin/category" class="list-link">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    Danh mục
                  </a>
                </li>
                <li class="list-item">
                  <a href="/admin/tags" class="list-link">
                    <i class="fa fa-tags" aria-hidden="true"></i>
                    Thẻ
                  </a>
                </li>
                <li class="list-item">
                  <a href="/admin/news" class="list-link">
                    <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                    Bài viết
                  </a>
                </li>
                <li class="list-item">
                  <a href="/admin/users" class="list-link">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    Người dùng
                  </a>
                </li>
                <li class="list-item">
                  <a href="/admin/assign-category" class="list-link active">
                    <i class="fa fa-eyedropper" aria-hidden="true"></i>
                    Phân công chuyên mục
                  </a>
                </li>
                <li class="list-item">
                  {{!-- Sign out --}}
                  <form action="/Account/Logout" id="frmLogout" method="POST"></form>
                  <a class="nav-link" href="javascript: $('#frmLogout').submit()">
                    <i class="fa fa-sign-in" aria-hidden="true"></i>
                    Đăng xuất
                  </a>
                </li>
              </ul>
            </nav>


            {{!-- Ads --}}
            <div class="position-relative d-flex justify-content-center">
              <div class="ads">
                <img src="/public/images/flamenco-lets-get-out-of-here.png" alt="Image Ads">
                <p>Upgrade to <span style="font-weight: bold;">Pro</span> now</p>
                <a href="#" class="btn btn-success mt-2 mb-2">Upgrade</a>
              </div>
            </div>
          </section>


          {{!-- Sidebar Mobile --}}
          <section class="sidebar-mobile">
            {{!-- Logo --}}
            <div class="logo">
              <a href="/" class="d-block">
                <img src="/public/images/logo.png" alt="Image Logo">
              </a>
            </div>

            {{!-- Navbar --}}
            <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
              <div class="container">
                <a class="navbar-brand" href="/">
                  <h3>Trang chủ</h3>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse"
                  data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                  aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse position-relative" id="navbarSupportedContent">
                  <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                      <a href="/admin" class="nav-link">
                        <i class="fa fa-tachometer" aria-hidden="true"></i>
                        Bảng điều khiển
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/admin/category" class="nav-link">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Danh mục
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/admin/tags" class="nav-link">
                        <i class="fa fa-tags" aria-hidden="true"></i>
                        Thẻ
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/admin/news" class="nav-link">
                        <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                        Bài viết
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/admin/users" class="nav-link">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        Người dùng
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/admin/assign-category" class="list-link active">
                        <i class="fa fa-eyedropper" aria-hidden="true"></i>
                        Phân công chuyên mục
                      </a>
                    </li>
                    <li class="nav-item">
                      {{!-- Sign out --}}
                      <form action="/Account/Logout" id="frmLogout" method="POST"></form>
                      <a class="nav-link" href="javascript: $('#frmLogout').submit()">
                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                        Đăng xuất
                      </a>
                    </li>
                  </ul>
                </div>
              </div>
            </nav>
          </section>
        </section>

        {{!-- Main content --}}
        <section class="col-sm-12 col-lg-10 main-content">
          <div class="container">
            {{!-- Top bar --}}
            <div class="top-bar-admin mb-4">
              <h4>Phân công chuyên mục</h4>
              <form class="search-form my-2 my-lg-0" method="GET" action="/Category/search">
                <input class="form-control mr-sm-2" type="text" name="Search" placeholder="Search">
                <button class="btn-search" type="submit">
                  <i class="fa fa-search" aria-hidden="true"></i>
                </button>
              </form>
            </div>

            {{!-- Card --}}
            <div class="card">
              <div class="card-header">
                <h5>Bảng Editor</h5>
              </div>
              <div class="card-body">
                <form action="/admin/assign-category/update" id="frmEditAssignCat" onsubmit="return validationEditAssignCat"
                  method="POST">
                  <div class="form-row">
                    <div class="col-lg-6">
                      <label>ID</label>
                      <input type="text" class="form-control" name="IDUser" value="{{IDUser}}" readonly>
                    </div>
                    <div class="col-lg-6">
                      <label>Tên</label>
                      <input type="text" class="form-control" name="Name" value="{{Name}}" readonly>
                    </div>
                  </div>
                  <div class="form-group mt-4">
                    <label>Các chuyên mục</label>
                    <div class="d-flex flex-wrap">
                      {{#each this.listCatByIDUser}}
                      <div class="form-check">
                        <input class="form-check-input" name="CatID[]" checked type="checkbox" value="{{CatID}}">
                        <label class="form-check-label ml-2">{{CatName}}</label>
                      </div>
                      {{/each}}
                      {{#each this.allCat}}
                      <div class="form-check">
                        <input class="form-check-input" name="CatID[]" type="checkbox" value="{{CatID}}">
                        <label class="form-check-label ml-2">{{CatName}}</label>
                      </div>
                      {{/each}}
                    </div>
                  </div>
                  <button type="submit" class="btn btn-primary mt-3">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Lưu
                  </button>
                </form>
              </div>
              <div class="card-footer">
                <a href="/admin/assign-category" class="btn btn-outline-success">
                  <i class="fa fa-backward" aria-hidden="true"></i>
                  Quay lại trang danh sách
                </a>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>


  {{!-- Bootstrap JS --}}
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

  <script src="/public/assets/js/table.js"></script>
  {{!-- Validation --}}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
  <script src="/public/assets/js/validation.js"></script>
</body>

</html>